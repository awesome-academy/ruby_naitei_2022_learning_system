<template id="admin-page-courses-show-template">
  <div class="container-fluid overflow-auto py-3">
    <div class="card">
      <div class="card-header h-5">
        <div class="d-flex flex-row justify-content-between align-items-center">
          <%= content_tag :h1, t(".title", course: @course.id) %>
          <div class="d-flex flex-row justify-content-between">
            <%= link_to t(".edit"), edit_course_path(@course), class: "btn btn-outline-secondary d-flex align-items-center" %>
            <%= button_to t(".delete"), course_path(@course), method: :delete, data: { confirm: t(".confirm") },
            class: "btn btn-outline-secondary btn-lg" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= content_tag :h3, @course.name, class: "card-title" %>
        <%= content_tag :p, @course.description, class: "card-text p-3" %>
        <%= render Admin::LessonsListComponent.new lessons: @course.lessons %>
      </div>
    </div>
  </div>
</template>

<admin-page-courses-show></admin-page-courses-show>
