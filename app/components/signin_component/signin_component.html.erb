<section class="vh-100 signin font-family-montserrat">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card rounded-4">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block img-box">
              <img class="signin-illustrate-image position-relative top-50 start-50 translate-middle" src="/assets/ill.png" alt="illustrate-image">
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 text-black">
                <div class="d-flex justify-content-center mb-3 pb-1">
                  <span><img class="logo" src="/assets/logo.png" alt="logo"></span>
                  <span class="h1 fw-bold mb-0"><p class="font-family-ubuntu signin-brand"><%= t ".title" %><p></span>
                </div>

                <%= form_for(:session, url: signin_path) do |f| %>
                  <div class="mb-4">
                    <%= f.label :email, t(".email"), class: "form-label" %>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>

                  <div class="mb-4">
                    <%= f.label :password, t(".password"), class: "form-label" %>
                    <%= f.password_field :password, class: "form-control" %>
                  </div>

                  <div class="mb-4">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, t(".remember_me"), class: "form-check-label"  %>
                  </div>
                  <div class="d-grid gap-2 mb-2">
                    <%= f.submit t(".button"), class: "btn btn-dark btn-lg" %>
                  </div>

                  <%= link_to t(".forgot_pwd"), "#", class: "form-text text-decoration-none text-secondary" %>

                  <p class="my-1 pb-lg-2"><%= t ".no_account" %><%= link_to t(".sign_up_link"), signup_path, class: "text-decoration-none text-warning" %></p>

                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
