<div class="container">
  <div class="row pt-3">
    <% for course in @courses %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pb-3">
        <a href="#" class="text-decoration-none">
          <%= render CourseCardComponent.new(course: course) %>
        </a>
      </div>
    <% end %>
    <% if @pagy.any?%>
      <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy)%>
      </div>
    <% end %>
  </div>
</div>
