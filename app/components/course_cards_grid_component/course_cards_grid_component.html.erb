<div class="container font-family-montserrat">
  <div class="row pt-3">
    <% for course in @courses %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pb-3">
        <%= link_to(
          render(CourseCardComponent.new(course: course)),
          [:admin, course],
          class: "text-decoration-none"
          )
        %>
      </div>
    <% end %>
    <% if @pagy.present? %>
      <div class="d-flex justify-content-center mt-5">
        <%== pagy_bootstrap_nav(@pagy)%>
      </div>
    <% end %>
  </div>
</div>
